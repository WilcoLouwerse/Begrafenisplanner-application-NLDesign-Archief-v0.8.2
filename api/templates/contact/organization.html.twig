{% extends "base.html.twig" %}

{% block content %}

    <div class="row">

        <div class="col-md-auto col-sm-auto">

            <div class="content-background" >
                <div class="content">

                    <h2>Organizations:</h2>
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Organization ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Date Created</th>
                            <th scope="col">Date Modified</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for organizationContact in organizationContacts['hydra:member'] %}
                        <tr>
                            <td>{{ (organizationContact["id"]) }}</td>
                            <td>{{ (organizationContact["name"]) }}</td>
                            <td>{{ (organizationContact["description"]) }}</td>
                            <td>{{ (organizationContact["dateCreated"]) }}</td>
                            <td>{{ (organizationContact["dateModified"]) }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div><!-- /.content -->
            </div><!-- /.content-background -->
        </div><!-- /.col -->
    </div>

{% endblock %}
