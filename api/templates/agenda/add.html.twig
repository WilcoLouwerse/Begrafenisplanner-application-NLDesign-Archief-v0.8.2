{% extends "base.html.twig" %}

{% block content %}

    <div class="row">

        <div class="col-md-8 col-sm-12">

            <div class="content-background" >
                <div class="content">

                    <h2>Voeg hier een event toe</h2>

                    <form action="add" method="post">
                        Name: <input type = "text" name = "Name" value="Name Here"/> <br />
                        Description: <input type = "text" name = "Description" value="Description Here"/> <br />
                        StartDate: <input type="datetime-local" name = "StartDate"/> <br />
                        EndDate: <input type="datetime-local" name = "EndDate"/> <br />
                        <div class="field select-box">
                            Calendar:
                            <select name="Calendar">
                                <option>Select Calendar</option>
                                {% for calendar in calendars %}
                                    <option value="{{ calendar['@id'] }}">{{  (calendar['name']) }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <input type="submit" name="Submit" value="Add"/>
                    </form>

                </div><!-- /.content -->
            </div><!-- /.content-background -->
        </div><!-- /.col -->
    </div>

{% endblock %}
